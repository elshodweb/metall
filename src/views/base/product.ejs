
<div id="product" class="prot">
  <div class="products">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="titlepage text_align_left">
            <h2>Metal Products</h2>
            <p>
              It is a long established fact that a reader will be distracted
              by the readable content of a page when looking at its layout.
              The point of using Lorem Ipsum is that it has a more-or-less
              normal distribution of letters,
            </p>
          </div>
        </div>
      </div>
    </div>
    <div
      id="prod"
      class="carousel slide product_banner"
      data-ride="carousel"
    >
      <ol class="carousel-indicators">
        <li data-target="#prod" data-slide-to="0" class="active"></li>
        <li data-target="#prod" data-slide-to="1"></li>
        <li data-target="#prod" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        
      <% for (let index = 0; index < cards.length; index+=3) { %>
        <% let array = cards.slice(index,index+3); %>
       
         <div class="carousel-item <%- index==0?"active":" " %>">
           <div class="container">
             <div class="carousel-caption banner_pro">
               <div class="row d_flex">
                 <% array.forEach((el,i) => {%>
 
                 <div class="col-md-4 <%- (i+1)%3==0?" ": "mar_bottom30" %>">
                   <div class="product">
                     <figure>
                       <img src="images/<%= el.image %>" alt="#" />
                     </figure>
                     <h3><%= el.name %></h3>
                   </div>
                 </div>
                 <% }); %>
               </div>
             </div>
           </div>
         </div>
       
       <% } %>

      </div>
      <a
        class="carousel-control-prev"
        href="#prod"
        role="button"
        data-slide="prev"
      >
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
        <span class="sr-only">Previous</span>
      </a>
      <a
        class="carousel-control-next"
        href="#prod"
        role="button"
        data-slide="next"
      >
        <i class="fa fa-arrow-right" aria-hidden="true"></i>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <a class="read_more" href="Javascript:void(0)">See More</a>
        </div>
      </div>
    </div>
  </div>
</div>