<% layout("pages/dashboard/loyaut") -%>

<!--main-->

<main>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Message</th>
        <th scope="col">Date</th>
        <th scope="col">Called</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach((contact,index) => {%>
      <tr>
        <th scope="row"><%= index+1 %></th>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.message %></td>
        <td width="auto"><%= contact.date %></td>
        <td><button 
          onclick="removeCalled(`<%- contact.id %>`)" class="badge p-2 text-light <%= contact.isCalled?"bg-success":"bg-secondary" %>"><%= contact.isCalled?'Called':'Didn\'t call' %></button></td>

        <td class="text-right">
          <button
            onclick="removeContact(`<%- contact.id %>`)"
            type="button"
            class="btn btn-danger mb-2"
          >
            remove
          </button>
        </td>
      </tr>
      <%}); %>
    </tbody>
  </table>
</main>

<!-- form scrpit -->
<script src="../myJs/dashboardContacts.js"></script>
